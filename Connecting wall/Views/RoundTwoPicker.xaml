<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Connecting_wall.Views.RoundTwoPicker"
             Title="RoundTwoPicker">
    <!--Grid that contains three grids within-->
    <Grid RowDefinitions=".7*,3.5*,3*">
        <!--First grid responsible for containing label asking user to pick a symbol button-->
        <Grid Grid.Row="0">
            <Label
                FontSize="Medium">
                Pick a symbol...
            </Label>

        </Grid>
        <!-- Second Grid Responsible for containing the symbol buttons that will take user to RoundTwoBoard page-->
        <Grid Grid.Row="1" RowDefinitions="*,*" ColumnDefinitions="*,*,*">
            <Button
                    x:Name="Symbol1" 
                    Grid.Row="0" Grid.Column="0"
                    Margin="5"
                    FontSize="Medium"
                    Text="!" 
                    BackgroundColor="IndianRed"
                    IsEnabled="True"
                    Clicked="GoToBtnOne"/>
            <Button
                    x:Name="Symbol2" 
                    Grid.Row="0" Grid.Column="1"
                    Margin="5"
                    FontSize="Medium"
                    Text="@" 
                    BackgroundColor="IndianRed"
                    IsEnabled="True"
                    Clicked="GoToBtnTwo"/>
            <Button
                    x:Name="Symbol3" 
                    Grid.Row="0" Grid.Column="2"
                    Margin="5"
                    FontSize="Medium"
                    Text="#" 
                    BackgroundColor="IndianRed"
                    IsEnabled="True"
                    Clicked="GoToBtnThree"/>
            <Button
                    x:Name="Symbol4" 
                    Grid.Row="1" Grid.Column="0"
                    Margin="5"
                    FontSize="Medium"
                    Text="$" 
                    BackgroundColor="IndianRed"
                    IsEnabled="True"
                    Clicked="GoToBtnFour"/>
            <Button
                    x:Name="Symbol5" 
                    Grid.Row="1" Grid.Column="1"
                    Margin="5"
                    FontSize="Medium"
                    Text="%" 
                    BackgroundColor="IndianRed"
                    IsEnabled="True"
                    Clicked="GoToBtnFive"/>
            <Button
                    x:Name="Symbol6" 
                    Grid.Row="1" Grid.Column="2"
                    Margin="5"
                    FontSize="Medium"
                    Text="^" 
                    BackgroundColor="IndianRed"
                    IsEnabled="True"
                    Clicked="GoToBtnSix"/>
        </Grid>
        <!--Last grid responsible for holding the team scores/numeric up down and next button-->
        <Grid Grid.Row="2" RowDefinitions="*,*,*" ColumnDefinitions="*,*,*,*,*">

            <Label 
                   x:Name="Team1ScoreLabel" 
                   Grid.Row="0" Grid.Column="0"            
                   HorizontalOptions="Center" VerticalOptions="Center" 
                   FontSize="Medium">
                <Label.Text>
                    <!--Binding for team name and score-->
                    <MultiBinding StringFormat="{}{0}s Score: {1}">
                        <Binding Path="TeamName" />
                        <Binding Path="TeamScore" />
                    </MultiBinding>
                </Label.Text>
            </Label>

            <Label 
                   x:Name="Team2ScoreLabel" 
                   Grid.Row="0" Grid.Column="1" 
                   HorizontalOptions="Center" VerticalOptions="Center" 
                   FontSize="Medium" >
                <Label.Text>
                    <!--Binding for team name and score-->
                    <MultiBinding StringFormat="{}{0}s Score: {1}"  >
                        <Binding Path="TeamName" />
                        <Binding Path="TeamScore"/>
                    </MultiBinding>
                </Label.Text>
            </Label>
            
            <!--Team buttons-->
            <Button
                    x:Name="a" 
                    Grid.Row="1" Grid.Column="3"
                    Margin="5"
                    FontSize="Medium"
                    BackgroundColor="LightBlue"
                    IsEnabled="True"/>
            <Button
                    x:Name="b" 
                    Grid.Row="2" Grid.Column="3"
                    Margin="5"
                    FontSize="Medium"
                    BackgroundColor="LightBlue"
                    IsEnabled="True"/>

            <Button
                    x:Name="Team1UpButton" 
                    Grid.Row="1" Grid.Column="0"
                    Margin="5"
                    FontSize="Medium"
                    Text="+" 
                    BackgroundColor="PaleGreen"
                    Clicked="WhenUpClicked1"
                    IsEnabled="True"/>
            <Button
                    x:Name="Team1DownButton" 
                    Grid.Row="2" Grid.Column="0"
                    Margin="5"
                    FontSize="Medium"
                    Text="-" 
                    BackgroundColor="Pink"
                    Clicked="WhenDownClicked1"
                    IsEnabled="True"/>
            <Button
                    x:Name="Team2UpButton" 
                    Grid.Row="1" Grid.Column="1"
                    Margin="5"
                    FontSize="Medium"
                    Text="+" 
                    BackgroundColor="PaleGreen"
                    Clicked="WhenUpClicked2"
                    IsEnabled="True"/>
            <Button
                    x:Name="Team2DownButton" 
                    Grid.Row="2" Grid.Column="1"
                    Margin="5"
                    FontSize="Medium"
                    Text="-" 
                    BackgroundColor="Pink"
                    Clicked="WhenDownClicked2"
                    IsEnabled="True"/>
            
            <!--Next button responsible for taking user to round 3 connecting wall-->
            <Button
                    x:Name="NextButton" 
                    Grid.Row="1" Grid.Column="4" Grid.RowSpan="2"
                    Margin="5"
                    FontSize="Medium"
                    Text="Next" 
                    BackgroundColor="PeachPuff"
                    Clicked="NextClicked"
                    IsEnabled="True"/>
        </Grid>

    </Grid>
</ContentPage>